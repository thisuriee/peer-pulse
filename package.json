{
  "name": "peer-pulse",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm --workspace client run dev",
    "dev:server": "npm --workspace server run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npm --workspace client run build",
    "build:server": "npm --workspace server run build",
    "start": "npm --workspace server run start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "npm --workspace client run typecheck",
    "typecheck:server": "npm --workspace server run typecheck",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "passport": "^0.7.0"
  }
}
